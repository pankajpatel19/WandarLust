<% if (success && success.length) { %>
<div class="container">
  <div
    class="alert alert-success alert-dismissible col-12 col-md-8 offset-md-2 mt-2"
    role="alert"
  >
    <%= success %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>
<% if (error && error.length) { %>
<div class="container">
  <div
    class="alert alert-danger alert-dismissible col-12 col-md-8 offset-md-2 mt-2"
    role="alert"
  >
    <%= error %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>
