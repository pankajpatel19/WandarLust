<% layout('layouts/boiler') -%>
<div class="row m-1">
  <h2 class="text-center mt-4 mb-3">SignUp On Wanderlust</h2>
  <div class="col-12 col-md-8 col-lg-5 mx-auto">
    <form
      action="/signup"
      method="post"
      novalidate
      class="needs-validation border border-2 p-3"
    >
      <div class="mb-3 mt-2">
        <label for="username">UserName</label>
        <input
          name="username"
          class="form-control"
          id="username"
          type="text"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email">Email</label>
        <input
          name="email"
          class="form-control"
          id="email"
          type="email"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password">Password</label>
        <input
          name="password"
          class="form-control"
          id="password"
          type="password"
          required
        />
      </div>
      <button class="btn btn-success w-100">SignUp</button>
    </form>
  </div>
</div>
