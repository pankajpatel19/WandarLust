<% layout('layouts/boiler') -%>
<body>
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
      <h1 class="mt-4">Edit Your list</h1>
      <form
        action="/listings/<%= list._id %>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <input
            name="listing[title]"
            value="<%= list.title %>"
            type="text"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <textarea
            name="listing[description]"
            id=""
            cols="30"
            rows="10"
            class="form-control"
          ><%= list.description %></textarea>
          <div class="mt-2">
            <p>Original Image</p>
            <img src="<%= originalUrl %>" alt="" class="img-fluid rounded" />
          </div>
        </div>
        <div class="row">
          <div class="mb-3 col-12 col-md-4">
            <input
              name="listing[image]"
              type="file"
              value="<%= list.image %>"
              class="form-control"
            />
          </div>
          <div class="mb-3 col-12 col-md-8">
            <input
              name="listing[cost]"
              value="<%= list.cost %>"
              type="number"
              class="form-control"
            />
          </div>
        </div>
        <div class="mb-3">
          <input
            name="listing[location]"
            value="<%= list.location %>"
            type="text"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <input
            name="listing[country]"
            value="<%= list.country %>"
            type="text"
            class="form-control"
          />
        </div>
        <button class="btn btn-danger">EDIT</button>
      </form>
    </div>
  </div>
</body>
